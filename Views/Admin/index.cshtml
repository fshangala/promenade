@model IEnumerable<Promenade.Models.Category>

@{
    ViewData["Title"] = "Admin";
}

<div class="container-sm">
    <div class="shadow border-bottom border-secondary mb-2">
        <div class="nav">
            <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">Dashboard</a>
            <a class="nav-link text-white" asp-controller="Admin" asp-action="Food">All Foods</a>
            <a class="nav-link text-white" asp-controller="Admin" asp-action="Settings">Settings</a>
        </div>
    </div>
    <div class="bg-white row row-cols-sm-4 row-cols-xs-2">
        <h2>Index</h2>
        <hr>

        <p>
            <a asp-action="CreateCategory">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        <a asp-action="EditCategory" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Food" asp-route-id="@item.Id">Foods</a> |
                        <a asp-action="DeleteCategory" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
